{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "brace-style": [
            "error",
            "stroustrup"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-unused-vars": [
            "off"
        ],
        "no-var": [
            "off"
        ],
        "one-var": [
            "off"
        ],
        "func-names":[
            0
        ],
        "object-curly-newline":[
            0
        ],
        "prefer-arrow-callback":[
            0
        ],
        "consistent-return":[
            0
        ],
        "object-shorthand":[
            0
        ],
        "no-restricted-syntax":[
            0
        ],
        "no-undef":[
            0
        ],
        "prefer-regex-literals":[
            0
        ],
        "newline-per-chained-call":[
            0
        ],
        "prefer-destructuring":[
            0
        ],
        "import/no-extraneous-dependencies":[
            0
        ]
    }
}
